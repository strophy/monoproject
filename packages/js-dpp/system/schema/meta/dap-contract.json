{
  "$schema": "https://schema.dash.org/platform-4-0-0/dash-schema/schema",
  "$id": "https://schema.dash.org/platform-4-0-0/system/meta/dap-contract",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://schema.dash.org/platform-4-0-0/dash-schema/schema"
    }
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://schema.dash.org/platform-4-0-0/system/meta/dap-contract"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "pattern": "^[a-zA-Z0-9-_]{1,255}$"
    },
    "version": {
      "type": "number",
      "multipleOf": 1.0,
      "minimum": 1
    },
    "dapObjectsDefinition": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]{1,255}$": {
          "type": "object",
          "properties": {
            "allOf": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "$ref": {
                      "type": "string",
                      "const": "https://schema.dash.org/platform-4-0-0/system/base/dap-object"
                    }
                  },
                  "additionalProperties": false
                }
              ],
              "minItems": 1
            },
            "type": {
              "type": "string",
              "const": "object"
            },
            "properties": {
              "type": "object",
              "propertyNames": {
                "pattern": "^[a-zA-Z0-9-_]{1,255}$"
              },
              "minProperties": 1,
              "maxProperties": 100
            }
          },
          "required": [
            "allOf",
            "properties"
          ]
        }
      },
      "additionalProperties": false
    },
    "definitions": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[a-zA-Z0-9-_]{1,255}$"
      },
      "maxProperties": 100
    }
  },
  "required": [
    "$schema",
    "name",
    "version",
    "dapObjectsDefinition"
  ],
  "additionalProperties": false
}
