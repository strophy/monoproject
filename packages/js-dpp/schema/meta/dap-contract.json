{
  "$schema": "https://schema.dash.org/platform-4-0-0/dash-schema/schema",
  "$id": "https://schema.dash.org/platform-4-0-0/system/meta/dap-contract",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://schema.dash.org/platform-4-0-0/dash-schema/schema"
    }
  ],
  "definitions": {
    "primaryKey": {
      "$id": "#primaryKey",
      "type": "object",
      "properties": {
        "composite": {
          "type": "boolean"
        },
        "includes": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_]{1,255}$"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "if": {
        "properties": {
          "composite": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "composite",
          "includes"
        ]
      },
      "required": [
        "composite"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://schema.dash.org/platform-4-0-0/system/meta/dap-contract"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "pattern": "^[a-zA-Z0-9-_]{1,255}$"
    },
    "version": {
      "type": "number",
      "multipleOf": 1.0,
      "minimum": 1
    },
    "dapObjectsDefinition": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]{1,255}$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "object"
            },
            "primaryKey": {
              "$ref": "#primaryKey"
            },
            "properties": {
              "type": "object",
              "propertyNames": {
                "pattern": "^[a-zA-Z0-9-_]{1,255}$"
              },
              "minProperties": 1,
              "maxProperties": 100
            },
            "additionalProperties": {
              "type": "boolean",
              "const": false
            }
          },
          "required": [
            "properties",
            "additionalProperties"
          ]
        }
      },
      "additionalProperties": false
    },
    "definitions": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[a-zA-Z0-9-_]{1,255}$"
      },
      "minProperties": 1,
      "maxProperties": 100
    }
  },
  "required": [
    "$schema",
    "name",
    "version",
    "dapObjectsDefinition"
  ],
  "additionalProperties": false
}
